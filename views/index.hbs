<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <div class="row justify-content-between">
        <div class="col-6">
          <form action="/search">
            <h4>Search</h4>
            <div class="input-group">
              <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
                  value="{{keyword}}" aria-describedby="search-button">
                <div class="input-group-append">
                  <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
                </div>
              </div>
          </form>
          </div>
          <div class="col-4">
            <form method="get" action="/">
              <h4>Sort</h4>
              <div class="input-group">
                <select class="form-control" id="sort" name="sort">
                  <option value="asc">A > Z</option>
                  <option value="desc">Z > A</option>                  
                </select>
                <div class='input-group-append'>
                  <button type="submit" class="btn btn-major">Submit</button>
                </div>
                
              </div>
              
            </form>
          </div>                   
        </div>      
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5 px-md-4">
  <div class="row">
    {{#each restaurants}}
    <div class="col-12 col-sm-6 col-md-4">
     
        <div class="card mb-3">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" />
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>
            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>
            <span class="badge bg-danger">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>
            <div class="row align-items-end">
              <div class="col">
                <a href="./restaurants/{{this._id}}/edit">Edit</a>
              </div>
              <div class="col">
                <a href="./restaurants/{{this._id}}">Detail</a>
              </div>
              <div class="col">
                <form action="./restaurants/{{ this._id }}/delete" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-danger">
                    刪除
                  </button>
                </form>
                
              </div>
            </div>
          </div>
        </div>        
      
    </div>
    {{/each}}
  </div>
</div>